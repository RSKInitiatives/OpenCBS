        <Text X="11" Y="105" Width="-11" Height="30" FontId="2" DisablePrefix="yes">#(loc.ProgressHeader)</Text>
        <Text X="11" Y="160" Width="170" Height="17" FontId="3" DisablePrefix="yes">#(loc.ProgressLabel)</Text>
